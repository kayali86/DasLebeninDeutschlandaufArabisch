<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.android.daslebenindeutschlandaufarabisch.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:padding="4dp"
                android:onClick="closeApp"
                android:src="@drawable/close"/>
            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Score: 0" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/score"
                android:layout_marginEnd="55dp"
                android:layout_marginStart="55dp"
                android:onClick="newGame"
                android:src="@drawable/repeat"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/home_button"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:onClick="goHome"
                app:srcCompat="@drawable/ic_action_name" />
        </RelativeLayout>

            <TextView
                android:id="@+id/question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="@android:color/black"
                android:background="@android:color/white"
                android:gravity="start"
                android:textAlignment="textStart"
                android:minLines="3"
                android:text="@string/questionTxtView" />

            <TextView
                android:id="@+id/questionAr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:gravity="right"
                android:textColor="@android:color/black"
                android:background="@android:color/white"
                android:textDirection="rtl"
                android:minLines="3"
                android:text="@string/questionTxtView" />

            <CheckedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="#1a1a1a"
                android:id="@+id/answer1"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:minLines="2"
                android:text="@string/Choice1TxtView" />

            <CheckedTextView
                android:id="@+id/answer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@android:color/holo_red_dark"
                android:gravity="center"
                android:textAlignment="center"
                android:minLines="2"
                android:text="@string/Choice2TxtView" />

            <CheckedTextView
                android:id="@+id/answer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@android:color/holo_orange_dark"
                android:gravity="center"
                android:textAlignment="center"
                android:minLines="2"
                android:text="@string/Choice3TxtView" />

            <CheckedTextView
                android:id="@+id/answer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@android:color/holo_orange_light"
                android:gravity="center"
                android:textAlignment="center"
                android:minLines="2"
                android:text="@string/Choice4TxtView" />

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-4358846727124158/6397112922">
        </com.google.android.gms.ads.AdView>
    </LinearLayout>
</ScrollView>
